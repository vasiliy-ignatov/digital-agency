	section.section.section_gradient
		.container
			.projects
				.title.title_projects Наши проекты
				.projects__list
					.component
							.grid
								-
									let projectsItems = [
										"Lalique бутик",
										"Строительство домов",
										"Кофейня",
										"Уникальные туры",
									];
